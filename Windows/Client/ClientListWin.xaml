                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Binding="{Binding Path=ContactType, Mode=OneWay}" IsReadOnly="True" Width="150" />
                                                    <DataGridTemplateColumn Width="*" >
                                                        <DataGridTemplateColumn.CellTemplate>
