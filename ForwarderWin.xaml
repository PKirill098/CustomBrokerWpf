<Window x:Class="KirillPolyanskiy.CustomBrokerWpf.ForwarderWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Экспедитор" Name="winForwarder" Height="200" Width="300" Loaded="Window_Loaded" Closing="Window_Closing" Icon="/CustomBrokerWpf;component/Images/hand_paper.png">
    <Grid >
        <DataGrid Name="mainDataGrid" AutoGenerateColumns="False" RowDetailsVisibilityMode="VisibleWhenSelected" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=itemName}" Header="Название" />
                <DataGridTextColumn Binding="{Binding Path=person}" Header="Лицо" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
